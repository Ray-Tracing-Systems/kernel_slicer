#pragma once 

namespace std
{
  /// One of the @link arithmetic_functors math functors@endlink.
  template<typename _Tp>
  struct plus
  {
    _Tp operator()(const _Tp& __x, const _Tp& __y) const { return __x + __y; }
  };

  template<class T>           T* exclusive_scan(const T* first, const T* last, const T* d_first, T init );
  template<class T, class Op> T* inclusive_scan(const T* first, const T* last, const T* d_first, Op op, T init );
}
