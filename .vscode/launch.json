            "args"   : ["${workspaceFolder}/apps/01_intersectSphere/test_class.cpp", 
                        "-stdlibfolder", "${workspaceFolder}/TINYSTL",
                        "-pattern", "rtv", 
                        "-stdlibfolder", "${workspaceFolder}/TINYSTL",
                        "-I${workspaceFolder}/TINYSTL",          "ignore",
                        "-I${workspaceFolder}/apps/LiteMath",    "ignore", 
                        "-I${workspaceFolder}/apps/LiteMathAux", "ignore", 
                        "-shaderCC", "glsl",
                        "-megakernel", "0",
                        "-DKERNEL_SLICER",
                        "-v"],
            "stopAtEntry"    : false,
            "cwd"            : "${workspaceFolder}",
            "environment"    : [],
            "externalConsole": false,
            "MIMode"         : "gdb",
            "setupCommands"  : [
                {
                    "description"   : "Enable pretty-printing for gdb",
                    "text"          : "-enable-pretty-printing",
                    "ignoreFailures": true
